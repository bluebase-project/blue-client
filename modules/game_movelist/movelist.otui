MoveListLabel < Label
  font: verdana-11px-monochrome
  background-color: alpha
  text-offset: 42 3
  focusable: true
  height: 36
  image-clip: 0 0 32 32
  image-size: 32 32
  image-offset: 2 2
  image-source: /images/game/moves/defaultmoves

  $focus:
    background-color: #ffffff22
    color: #ffffff

MoveInfoLabel < Label
  width: 70
  font: verdana-11px-monochrome
  text-align: right
  margin-left: 10
  margin-top: 5

MoveInfoValueLabel < Label
  text-align: left
  width: 190
  margin-left: 10
  margin-top: 5

FilterButton < Button
  width: 64
  anchors.left: prev.right
  anchors.top: moveList.bottom
  @onClick: toggleFilter(self)
  margin: 5 0 0 6
  color: #630000
  $on:
    color: green

MainWindow
  id: movelistWindow
  !text: tr('Move List')
  size: 550 400
  @onEscape: toggle()

  TextList
    id: moveList
    vertical-scrollbar: movesScrollBar
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.bottom: next.top
    margin-bottom: 10
    padding: 1
    width: 210
    focusable: false

  Button
    id: buttonCancel
    !text: tr('Close')
    width: 64
    anchors.right: parent.right
    anchors.bottom: parent.bottom
    @onClick: toggle()

  VerticalScrollBar
    id: movesScrollBar
    anchors.top: moveList.top
    anchors.bottom: moveList.bottom
    anchors.right: moveList.right
    step: 50
    pixels-scroll: true

  MoveInfoLabel
    id: labelName
    anchors.left: moveList.right
    anchors.top: moveList.top
    !text: tr('Name') .. ':'

  Label
    anchors.left: parent.left
    anchors.top: moveList.bottom
    !text: tr('Filters') .. ':'
    margin-top: 8

  FilterButton
    id: buttonFilterLevel
    !text: tr('Level')
    !tooltip: tr('Hide moves for higher exp. levels')

  FilterButton
    id: buttonFilterVocation
    !text: tr('Vocation')
    !tooltip: tr('Hide moves for other vocations')

  MoveInfoLabel
    id: labelFormula
    anchors.left: moveList.right
    anchors.top: labelName.bottom
    !text: tr('Formula') .. ':'


  MoveInfoLabel
    id: labelVocation
    anchors.left: moveList.right
    anchors.top: labelFormula.bottom
    !text: tr('Vocation') .. ':'

  MoveInfoLabel
    id: labelGroup
    anchors.left: moveList.right
    anchors.top: labelVocation.bottom
    !text: tr('Group') .. ':'

  MoveInfoLabel
    id: labelType
    anchors.left: moveList.right
    anchors.top: labelGroup.bottom
    !text: tr('Type') .. ':'

  MoveInfoLabel
    id: labelCooldown
    anchors.left: moveList.right
    anchors.top: labelType.bottom
    !text: tr('Cooldown') .. ':'

  MoveInfoLabel
    id: labelLevel
    anchors.left: moveList.right
    anchors.top: labelCooldown.bottom
    !text: tr('Level') .. ':'

  MoveInfoLabel
    id: labelMana
    anchors.left: moveList.right
    anchors.top: labelLevel.bottom
    !text: tr('Mana') .. ' / ' .. tr('Soul') .. ':'

  MoveInfoLabel
    id: labelPremium
    anchors.left: moveList.right
    anchors.top: labelMana.bottom
    !text: tr('Premium') .. ':'

  MoveInfoLabel
    id: labelDescription
    anchors.left: moveList.right
    anchors.top: labelPremium.bottom
    !text: tr('Description') .. ':'

  MoveInfoValueLabel
    id: labelNameValue
    anchors.left: labelName.right
    anchors.top: moveList.top

  MoveInfoValueLabel
    id: labelFormulaValue
    anchors.left: labelFormula.right
    anchors.top: labelNameValue.bottom

  MoveInfoValueLabel
    id: labelVocationValue
    anchors.left: labelVocation.right
    anchors.top: labelFormulaValue.bottom

  MoveInfoValueLabel
    id: labelGroupValue
    anchors.left: labelGroup.right
    anchors.top: labelVocationValue.bottom

  MoveInfoValueLabel
    id: labelTypeValue
    anchors.left: labelType.right
    anchors.top: labelGroupValue.bottom

  MoveInfoValueLabel
    id: labelCooldownValue
    anchors.left: labelCooldown.right
    anchors.top: labelTypeValue.bottom

  MoveInfoValueLabel
    id: labelLevelValue
    anchors.left: labelLevel.right
    anchors.top: labelCooldownValue.bottom

  MoveInfoValueLabel
    id: labelManaValue
    anchors.left: labelMana.right
    anchors.top: labelLevelValue.bottom

  MoveInfoValueLabel
    id: labelPremiumValue
    anchors.left: labelPremium.right
    anchors.top: labelManaValue.bottom

  MoveInfoValueLabel
    id: labelDescriptionValue
    anchors.left: labelDescription.right
    anchors.top: labelPremiumValue.bottom

  Label
    id: labelVocationFilter
    anchors.top: labelPremium.bottom
    anchors.left: moveList.right
    width: 70
    font: verdana-11px-monochrome
    !text: tr('Vocation')
    margin-top: 30
    margin-left: 20

